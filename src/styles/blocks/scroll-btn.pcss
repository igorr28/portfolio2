.scroll-link {
    display: flex;
    align-items: center;
    padding: 10px;
    transition: 0.3s;

    &__text {
        margin-right: 8px;
    }

    &__icon {
        width: 20px;
        height: 30px;
    }

    &:hover {
        color: #5500f2;
    }

    &:hover .scroll-link__icon {
        fill: #5500f2;
    }
}